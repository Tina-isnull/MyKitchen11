<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lcc.mykitchen.make_children.CountAlterActivity">

    <include layout="@layout/include_actionbar"></include>

    <EditText
        android:id="@+id/et_countAlter_id"
        style="@style/et_style"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="请输入您的手机号"
        />

    <View style="@style/line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <EditText
            style="@style/et_style"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:hint="请输入验证码"
          />

        <Button
            android:id="@+id/btn_countAlter_getCodeId"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="获得验证码"
            android:textColor="@color/textColor"
            android:textSize="10sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_countAlter_id"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@color/themeColor"
        android:text="下一步"
        android:textColor="@color/white" />

</LinearLayout>
