<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/img_menu_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/collect_delete" />

        <TextView
            android:id="@+id/tv_upload_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img_menu_delete"
            android:text="1" />

        <ImageView
            android:id="@+id/img_upload_step"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/tv_upload_index"
            android:src="@drawable/camera1" />

        <TextView
            android:id="@+id/tv_addMenu_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <EditText
            android:id="@+id/et_add_menu_content_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/img_upload_step"
            android:layout_below="@+id/img_upload_step"
            android:layout_gravity="center_vertical"
            android:hint="添加内容"
            android:paddingLeft="10dp"
            android:textSize="15sp" />
    </RelativeLayout>
</LinearLayout>